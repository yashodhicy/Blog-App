<h1>Posts#new</h1>
<%= form_with model: @post, url: user_posts_path(@user), method: :post, local: true, scope: :post do |form| %>
   <%= form.label :title %>
  <%= form.text_field :title, required: true %>

  <%= form.label :text %>
  <%= form.text_area :text, required: true %>

  <%= form.submit "Create Post" %>
<% end %>



